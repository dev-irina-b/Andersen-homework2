<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.example.homework2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Homework2">
        <activity
            android:name=".twoactivities.CounterHomeworkActivity"
            android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity
            android:name=".shoppingapp.ShoppingAppActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="geo" />
            </intent-filter>
        </activity>
        <activity
            android:name=".shoppingapp.ShoppingAppSecondActivity"
            android:exported="true" />
        <activity
            android:name=".twoactivities.ChallengeSecondActivity"
            android:exported="true" />
        <activity
            android:name=".twoactivities.ChallengeActivity"
            android:exported="true" />
        <activity
            android:name=".implicitintents.ImplicitIntentsReceiverActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="developer.android.com"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".learntohelpyourself.ScrollingActivity"
            android:exported="true"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/Theme.Homework2.NoActionBar" />
        <activity
            android:name=".learntohelpyourself.BasicActivity"
            android:exported="true"
            android:label="@string/title_activity_basic"
            android:theme="@style/Theme.Homework2.NoActionBar" />
        <activity
            android:name=".implicitintents.ImplicitIntentsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="geo" />
            </intent-filter>
        </activity>
        <activity
            android:name=".twoactivities.HomeworkSecondActivity"
            android:exported="true" />
        <activity
            android:name=".twoactivities.HomeWorkActivity"
            android:exported="true" />
        <activity
            android:name=".twoactivities.SecondActivity"
            android:exported="true"
            android:label="Second Activity"
            android:parentActivityName=".twoactivities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".twoactivities.MainActivity" />
        </activity>
        <activity
            android:name=".twoactivities.MainActivity"
            android:exported="true" />
        <activity
            android:name=".scrollingtext.ScrollingTextHomeworkActivity"
            android:exported="true" />
        <activity
            android:name=".scrollingtext.ScrollingTextActivity"
            android:exported="true" />
        <activity
            android:name=".hellotoast.HelloConstraint"
            android:exported="true" />
        <activity
            android:name=".hellotoast.HelloToastRelativeLayout"
            android:exported="true" />
        <activity
            android:name=".hellotoast.HelloToastLinearLayout"
            android:exported="true" />
        <activity
            android:name=".hellotoast.HelloToastChallenge"
            android:exported="true" />
        <activity
            android:name=".hellotoast.HelloToast"
            android:exported="true" />
        <activity
            android:name=".helloworld.HelloWorld"
            android:exported="true" />
    </application>

    <queries>
        <intent>
            <action android:name="android.intent.action.VIEW" />

            <category android:name="android.intent.category.BROWSABLE" />

            <data android:scheme="https" />
        </intent>
    </queries>

</manifest>